<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".SenderActivity"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/message_entry_label" 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="64sp"
        android:text="Enter Message:" />
    
    <EditText 
        android:id="@+id/message_entry" 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:inputType="text" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        tools:context=".SenderActivity"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/send_alpha_orig_button"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:textSize="16sp"
            android:text="Send Alpha using Orig" />

        <Button
            android:id="@+id/send_alpha_orig_interceptible_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Send Alpha Orig Interceptible" />
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        tools:context=".SenderActivity"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/send_bitstring_button"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:textSize="16sp"
            android:text="Send as Bitstring" />

        <Button
            android:id="@+id/send_bitstring_interceptible_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Send Bitstring Interceptible" />
    </LinearLayout>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        tools:context=".SenderActivity"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/send_clear_message_store_intent"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:textSize="16sp"
            android:text="Clear Receiver Message Store" />

        <Button
            android:id="@+id/run_throughput_test_button"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:textSize="16sp"
            android:text="Run Throughput Test" />
    </LinearLayout>

    <!-- TODO: Look into making this into a table view-->
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="5" >

        <TextView
            android:id="@+id/test_results_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="" />

    </ScrollView>
</LinearLayout>